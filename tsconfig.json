{
  // Change this to match your project
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./*",
        "./app/*",
        "./components/*"
      ]
    },
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "outDir": ".react",
    "declarationMap": false,
    "allowImportingTsExtensions": false,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}